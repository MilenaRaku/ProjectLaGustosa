<UserControl x:Class="LaGustosa.UI.UC.UcOrdersChef"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LaGustosa.UI.UC"
             mc:Ignorable="d" 
             Height="800" Width="1150">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="140"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Canvas>
                <Line Style="{StaticResource Line}" Canvas.Top="70"/>
            </Canvas>
        </Grid>

        <Border Grid.Row="0" Padding="15">
            <Grid Margin="0,0,0,-43">
                <TextBlock Text="Заказы" Style="{StaticResource TbUserControl}" VerticalAlignment="Top" Margin="0,5,0,0"/>

                <TextBlock Text="Поиск" Style="{StaticResource Foreground}" FontSize="23" HorizontalAlignment="Left" Margin="-14,68,0,6" RenderTransformOrigin="0.577,1.188"/>
                <TextBox x:Name="TBoxSearch" Style="{StaticResource ModernTextBox}" TextChanged="TBoxSearch_TextChanged"  HorizontalAlignment="Left" Width="250" Height="35" Margin="69,68,0,50"/>

                <TextBlock Text="Статус заказа"  Style="{StaticResource Foreground}"  FontSize="23" Margin="324,68,0,52" HorizontalAlignment="Left"/>
                <ComboBox  x:Name="CombBoxOrder" SelectionChanged="CombBoxOrder_SelectionChanged"  DisplayMemberPath="Status" FontSize="15"  Width="250" Height="35" Margin="469,68,0,50" HorizontalAlignment="Left">
                    <ComboBoxItem Tag="All">Все заказы</ComboBoxItem>
                    <ComboBoxItem Tag="Open">Открытые заказы</ComboBoxItem>
                    <ComboBoxItem Tag="Closed">Закрытые заказы</ComboBoxItem>
                </ComboBox>

                <TextBlock Text="Статус кухни" Style="{StaticResource Foreground}" FontSize="23" Margin="0,70,255,45" HorizontalAlignment="Right" RenderTransformOrigin="0.595,1.028"/>
                <ComboBox  x:Name="CombBoxStatus" SelectionChanged="ComboStatus_SelectionChanged" DisplayMemberPath="Status" FontSize="15"  Width="250" Height="35" Margin="0,68,0,50" HorizontalAlignment="Right"/>
            </Grid>
        </Border>

        <ScrollViewer Margin="0,10,0,0" HorizontalAlignment="Center" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Grid.Row="1">
            <ItemsControl Name="OrdersList" Style="{StaticResource ItemOrder}" ItemsSource="{Binding Orders}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Margin="0"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource BorderOrder}">
                            <Grid Margin="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Номер заказа -->
                                <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Stretch">
                                    <TextBlock Text="Заказ " FontSize="23" Style="{StaticResource TbOrder}" Margin="2,5,0,0"/>
                                    <TextBlock Text="{Binding Number}" FontSize="23" Style="{StaticResource TbOrder}" Margin="0,5,0,0" />
                                </StackPanel>

                                <!-- Номер стола -->
                                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Stretch">
                                    <TextBlock Text="Стол: " Style="{StaticResource TbOrder}" Margin="2,2,0,0"/>
                                    <TextBlock Text="{Binding Tables.Number}" Style="{StaticResource TbOrder}"  Margin="0,2,0,0"/>
                                </StackPanel>

                                <!-- Список блюд -->
                                <StackPanel Grid.Row="2" Margin="0,10,0,10">
                                    <TextBlock Text="Блюда:" Style="{StaticResource TbOrder}" Margin="0,0,0,5"/>
                                    <ItemsControl ItemsSource="{Binding OrderComposition}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal" Margin="0,2,0,2">
                                                    <TextBlock Text="{Binding Dish.Name}" Style="{StaticResource TbOrder}" Width="200" TextWrapping="Wrap"/>
                                                    <TextBlock Text=" - " Style="{StaticResource TbMenu}" />
                                                    <TextBlock Text="{Binding NumberPositions}" Style="{StaticResource TbOrder}" Width="30" TextAlignment="Center"/>
                                                    <TextBlock Text=" шт." Style="{StaticResource TbOrder}" />
                                                    <TextBlock Text=" | " Style="{StaticResource TbOrder}" Margin="5,0"/>
                                                    <TextBlock Text="{Binding Dish.Price, StringFormat={}{0:# руб.}}" Style="{StaticResource TbOrder}" Width="80"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>

                                <!-- Общая сумма -->
                                <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Stretch">
                                    <TextBlock Text="Итого: " Style="{StaticResource TbOrder}" Margin="2,2,0,0" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding Amount, StringFormat={}{0:#.## руб.}}" Style="{StaticResource TbOrder}" Margin="0,2,0,0" FontWeight="Bold"/>
                                </StackPanel>

                                <!-- Статус  заказа -->
                                <StackPanel Grid.Row="4"  >
                                    <TextBlock Text="Статус заказа: " Style="{StaticResource TbOrder}" FontWeight="Bold" Margin="0,10,0,0"/>
                                </StackPanel>

                                <!-- Статус открытия заказа -->
                                <StackPanel Grid.Row="5" Orientation="Horizontal" Margin="0,10,0,0">
                                    <TextBlock Text="{Binding OrderOpenings, StringFormat=' {0:Открыт: }'}" Style="{StaticResource TbOrder}" />
                                    <TextBlock Text="{Binding OrderOpenings, StringFormat=' {0:dd.MM.yyyy HH:mm}'}" Style="{StaticResource TbOrder}" Margin="5,0,0,0"/>
                                </StackPanel>

                                <!-- Статус закрытия заказа -->
                                <StackPanel Grid.Row="6" Orientation="Horizontal" Margin="0,10,0,0">
                                    <TextBlock Text="{Binding OrderClosure, StringFormat=' {0:Закрыт: }'}" Style="{StaticResource TbOrder}"/>
                                    <TextBlock Text="{Binding OrderClosure, StringFormat=' {0:dd.MM.yyyy HH:mm}'}" Style="{StaticResource TbOrder}" Margin="5,0,0,0"/>
                                </StackPanel>

                                <!-- Статус кухни -->
                                <StackPanel Grid.Row="7" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,10,0,0">
                                    <TextBlock Text="Статус: " Style="{StaticResource TbOrder}" VerticalAlignment="Center"/>
                                    <ComboBox ItemsSource="{Binding AllStatuses, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                  SelectedValue="{Binding KitchenStatusId, Mode=TwoWay}"
                                  SelectedValuePath="Id"
                                  DisplayMemberPath="Status"
                                  Width="200" Height="30" Margin="10,0,0,0" 
                                  SelectionChanged="StatusComboBox_SelectionChanged">
                                        <ComboBox.Style>
                                            <Style TargetType="ComboBox">
                                                <Setter Property="IsEnabled" Value="False"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding OrderClosure}" Value="{x:Null}">
                                                        <Setter Property="IsEnabled" Value="True"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </ComboBox.Style>
                                    </ComboBox>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>