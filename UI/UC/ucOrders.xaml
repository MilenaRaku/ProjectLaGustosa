<UserControl x:Class="LaGustosa.UI.UC.ucOrders"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LaGustosa.UI.UC"
             mc:Ignorable="d" 
             Height="800" Width="1150">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="130"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Canvas>
                <Line Canvas.Top="70" Style="{StaticResource Line}"/>
            </Canvas>
        </Grid>


        <Border Grid.Row="0" Padding="15">
            <Grid Margin="0,0,0,-43">
                <TextBlock Text="Заказы" Style="{StaticResource TbUserControl}" VerticalAlignment="Top" Margin="0,8,0,0"/>

                <TextBox x:Name="TBoxSearch" Style="{StaticResource ModernTextBox}" TextChanged="TBoxSearch_TextChanged"  HorizontalAlignment="Left" Width="194" Height="35" Margin="214,70,0,38"/>

                <DatePicker x:Name="DatePickerSearch"  
                   HorizontalAlignment="Left" Width="150" Margin="10,70,0,39"
                   SelectedDateChanged="DatePickerSearch_SelectedDateChanged"/>

                <TextBlock Text="Статус заказа"  Style="{StaticResource Foreground}"  FontSize="23" Margin="435,70,0,11" HorizontalAlignment="Left" RenderTransformOrigin="0.374,0.899"/>
                <ComboBox  x:Name="CombBoxOrder" SelectionChanged="CombBoxOrder_SelectionChanged"  DisplayMemberPath="Status" FontSize="15"  Width="194" Height="35" Margin="580,70,0,38" HorizontalAlignment="Left">
                    <ComboBoxItem Tag="All">Все заказы</ComboBoxItem>
                    <ComboBoxItem Tag="Open">Открытые заказы</ComboBoxItem>
                    <ComboBoxItem Tag="Closed">Закрытые заказы</ComboBoxItem>
                </ComboBox>

                <TextBlock Text="Статус кухни" Style="{StaticResource Foreground}" FontSize="23" Margin="0,72,205,11" HorizontalAlignment="Right" RenderTransformOrigin="0.595,1.028"/>
                <ComboBox  x:Name="CombBoxStatus" SelectionChanged="ComboStatus_SelectionChanged" DisplayMemberPath="Status" FontSize="15"  Width="194" Height="35" Margin="0,72,0,36" HorizontalAlignment="Right"/>
            </Grid>
        </Border>


        <ScrollViewer Margin="0,10,0,0" HorizontalAlignment="Center" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Grid.Row="1">
            <ItemsControl Name="OrdersList" Style="{StaticResource ItemOrder}" ItemsSource="{Binding Orders}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Margin="0"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource BorderOrder}">
                            <Grid Margin="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Номер заказа -->
                                <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Stretch">
                                    <TextBlock Text="Заказ " FontSize="23" Style="{StaticResource TbOrder}" Margin="0,5,0,0"/>
                                    <TextBlock Text="{Binding Number}" FontSize="23" Style="{StaticResource TbOrder}" Margin="0,5,0,0" />
                                </StackPanel>

                                <!-- Номер стола -->
                                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Stretch">
                                    <TextBlock Text="Стол: " Style="{StaticResource TbOrder}" Margin="2,2,0,0"/>
                                    <TextBlock Text="{Binding Tables.Number}" Style="{StaticResource TbOrder}"  Margin="0,2,0,0"/>
                                </StackPanel>

                                <!-- Список блюд -->
                                <StackPanel Grid.Row="2" Margin="0,10,0,10">
                                    <TextBlock Text="Блюда:" Style="{StaticResource TbOrder}" Margin="0,0,0,5"/>
                                    <ItemsControl ItemsSource="{Binding OrderComposition}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal" Margin="0,2,0,2">
                                                    <TextBlock Text="{Binding Dish.Name}" Style="{StaticResource TbOrder}" Width="200" TextWrapping="Wrap"/>
                                                    <TextBlock Text=" - " Style="{StaticResource TbMenu}" />
                                                    <TextBlock Text="{Binding NumberPositions}" Style="{StaticResource TbOrder}" Width="30" TextAlignment="Center"/>
                                                    <TextBlock Text=" шт." Style="{StaticResource TbOrder}" />
                                                    <TextBlock Text=" | " Style="{StaticResource TbOrder}" Margin="5,0"/>
                                                    <TextBlock Text="{Binding Dish.Price, StringFormat={}{0:# руб.}}" Style="{StaticResource TbOrder}" Width="80"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>

                                <!-- Общая сумма -->
                                <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Stretch">
                                    <TextBlock Text="Итого: " Style="{StaticResource TbOrder}" Margin="2,2,0,0" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding Amount, StringFormat={}{0:#.## руб.}}" Style="{StaticResource TbOrder}" Margin="0,2,0,0" FontWeight="Bold"/>
                                </StackPanel>

                                <!-- Статус кухни -->
                                <StackPanel Grid.Row="4" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,10,0,0">
                                    <TextBlock Text="Статус: " Style="{StaticResource TbOrder}" VerticalAlignment="Center" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding KitchenStatus.Status}" Style="{StaticResource TbOrder}" Margin="5,0,0,0"/>
                                </StackPanel>

                                <!-- Время открытия заказа -->
                                <StackPanel Grid.Row="5" Orientation="Horizontal" Margin="0,10,0,0">
                                    <TextBlock Text="{Binding OrderOpenings, StringFormat=' {0:Открыт: }'}" Style="{StaticResource TbOrder}" />
                                    <TextBlock Text="{Binding OrderOpenings, StringFormat=' {0:dd.MM.yyyy HH:mm}'}" Style="{StaticResource TbOrder}" Margin="5,0,0,0"/>
                                </StackPanel>

                                <!-- Статус закрытия заказа -->
                                <StackPanel Grid.Row="6" Orientation="Horizontal" Margin="0,10,0,0">
                                    <TextBlock Text="{Binding OrderClosure, StringFormat=' {0:Закрыт: }'}" Style="{StaticResource TbOrder}"/>
                                    <TextBlock Text="{Binding OrderClosure, StringFormat=' {0:dd.MM.yyyy HH:mm}'}" Style="{StaticResource TbOrder}" Margin="5,0,0,0"/>
                                </StackPanel>

                                <!-- ФИО пользователя закрывшего заказ  -->
                                <StackPanel Grid.Row="7" Orientation="Horizontal" Margin="0,10,0,0">
                                    <TextBlock Text="{Binding User.LName}" Style="{StaticResource TbOrder}"/>
                                    <TextBlock Text=" "/>
                                    <TextBlock Text="{Binding User.FName}"  Style="{StaticResource TbOrder}"/>
                                    <TextBlock Text=" "/>
                                    <TextBlock Text="{Binding User.Patronymic}" Style="{StaticResource TbOrder}"/>
                                </StackPanel>

                                <!-- Кнопка закрытия заказа -->
                                <StackPanel Grid.Row="8" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,5,0,0">
                                    <Button Content="Закрыть заказ" Click="CloseOrderButton_Click" Style="{StaticResource CloseOrderButtonStyle}"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>
