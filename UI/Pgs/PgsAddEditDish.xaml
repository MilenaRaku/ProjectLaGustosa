<Page x:Class="LaGustosa.UI.Pgs.PgsAddEditDish"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LaGustosa.UI.Pgs"
      mc:Ignorable="d" 
      Height="800" Width="1150"
      Title="Добавление/Редактирование блюда">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Style="{StaticResource Foreground}"
                   Text="{Binding Title, RelativeSource={RelativeSource AncestorType=Page}}"
                   FontSize="24" 
                   FontWeight="Bold"
                   Margin="0,15,0,20"
                   HorizontalAlignment="Center"/>

        <!-- Основная форма -->
        <Border Grid.Row="1" Style="{StaticResource BorderAdEdDish}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Изображение блюда -->
                <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="4"
                        Width="150" Height="150"
                        BorderBrush="#DDD" BorderThickness="1"
                        Margin="0,0,20,0"
                        CornerRadius="5">
                    <Image x:Name="DishImage" 
                           Source="{Binding Image}"
                           Stretch="UniformToFill">
                        <Image.Clip>
                            <RectangleGeometry Rect="0,0,150,150" RadiusX="5" RadiusY="5"/>
                        </Image.Clip>
                    </Image>
                </Border>

                <Button Grid.Row="0" Grid.Column="0" Grid.RowSpan="4"
                        Content="Выбрать изображение"
                        Width="150"
                        VerticalAlignment="Bottom"
                        Margin="0,0,20,0"
                        Click="BtnSelectImage_Click"
                        Style="{StaticResource PrimaryButton}"/>

                <!-- Название -->
                <TextBlock Grid.Row="0" Grid.Column="1"
                           Text="Название:"
                           Style="{StaticResource TblockAdEdDish}"
                           Margin="0,0,0,5"/>
                <TextBox Grid.Row="1" Grid.Column="1"
                         Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,0,0,10"
                         Style="{StaticResource ModernTextBox}"/>

                <!-- Категория -->
                <TextBlock Grid.Row="2" Grid.Column="1"
                           Text="Категория:"
                           Style="{StaticResource TblockAdEdDish}"
                           Margin="0,0,0,5"/>
                <ComboBox Grid.Row="3" Grid.Column="1" x:Name="ComboBoxCatehory"
                          ItemsSource="{Binding Category}"
                          DisplayMemberPath="Category"
                          SelectedValuePath="Id" 
                          SelectedValue="{Binding CategoryId, Mode=TwoWay}"
                          Margin="0,0,0,10" Cursor=""/>

                <!-- Описание -->
                <TextBlock Grid.Row="4" Grid.Column="1"
                           Text="Описание:"
                           Style="{StaticResource TblockAdEdDish}"
                           Margin="0,0,0,5"/>
                <TextBox Grid.Row="5" Grid.Column="1"
                         Text="{Binding Description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         Height="60"
                         Margin="0,0,0,10"
                         Style="{StaticResource ModernTextBox}"/>

                <!-- Вес и цена -->
                <Grid Grid.Row="6" Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Вес (г):"  Style="{StaticResource TblockAdEdDish}"
                                   Margin="0,0,0,5"/>
                        <TextBox Text="{Binding Weight, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource ModernTextBox}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Цена (руб):"  Style="{StaticResource TblockAdEdDish}"
                                   Margin="0,0,0,5"/>
                        <TextBox Text="{Binding Price, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource ModernTextBox}"/>
                    </StackPanel>
                </Grid>
                <CheckBox Grid.Row="7" Grid.Column="1"
                          Content="Отображать в меню"
                          IsChecked="{Binding Visibility, Mode=TwoWay}"
                          VerticalAlignment="Center"
                          Margin="0,10,0,0"
                          Style="{StaticResource ModernCheckBox}"/>
            </Grid>
        </Border>

        <!-- Кнопки действий -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button Content="Отмена" Width="150" Height="35" Margin="0,0,20,0" Click="BtnCancel_Click" Style="{StaticResource Button}"/>
            
            <Button Content="Сохранить" Width="150" Height="35" Click="BtnSave_Click" Style="{StaticResource Button}" />

        </StackPanel>
    </Grid>
</Page>
