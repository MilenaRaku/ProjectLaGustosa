<Page x:Class="LaGustosa.UI.Pgs.PgsCreatingOrder"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LaGustosa.UI.Pgs"
      mc:Ignorable="d" 
     Height="700" Width="900"
      Title="LaGustosa">

    <StackPanel>
        <Border Style="{StaticResource BorderPgs}">
            <StackPanel>
                <Image Source="/Resourse/Img/Logotip.png" Height="349" Width="385" VerticalAlignment="Top" Margin="0,70,0,0"/>
                <TextBlock  Style="{StaticResource TbPgsCrOrder}" Margin="0,50,0,0"><Hyperlink Style="{StaticResource HlinlPgsCrOrder}" x:Name="HlCreateOrder" Click="HlCreateOrder_Click">Создать заказ</Hyperlink></TextBlock>
                <TextBlock Style="{StaticResource TbPgsCrOrder}" Margin="0,30,0,0" FontSize="30"><Hyperlink Style="{StaticResource HlinlPgsCrOrder}" x:Name="HlAutorizating" Click="HlAutorizating_Click">Войти</Hyperlink></TextBlock>
            </StackPanel>
        </Border>
    </StackPanel>
</Page>
