<Page x:Class="LaGustosa.UI.Pgs.PgsListUsers"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LaGustosa.UI.Pgs"
      mc:Ignorable="d" 
      Height="800" Width="1150"
      Title="PgsListUsers" IsVisibleChanged="Page_IsVisibleChanged">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="10,10,-10,645" Grid.RowSpan="2">
            <Canvas Margin="0,10,0,-10">
                <Line X2="1150" Canvas.Top="10" Style="{StaticResource Line}" />
            </Canvas>
        </Grid>

        <!-- Заголовок с поиском -->
        <Border  Padding="15" Margin="0,20,0,645" Grid.RowSpan="2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="300"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Пользователи" FontSize="28" Style="{StaticResource Foreground}" FontWeight="Bold" VerticalAlignment="Center" />

                <TextBox Grid.Column="1" x:Name="SearchBox"  Style="{StaticResource ModernTextBox}" VerticalAlignment="Center"/>
            </Grid>

        </Border>

        <!-- Список пользователей -->
        <Border Grid.Row="1" Margin="15,25,15,15" CornerRadius="5">
            <DataGrid x:Name="DataGridUser"  Style="{StaticResource ModernDataGridStyle}" LoadingRow="DataGridUser_LoadingRow" AutoGenerateColumns="False">

                <DataGrid.Columns>

                    <DataGridTextColumn Header="Фамилия" 
                                  Binding="{Binding LName}" 
                                  Width="180"
                                  ElementStyle="{StaticResource DataGridTextStyle}" HeaderStyle="{StaticResource DataGridColumnHeaderDish}"/>

                    <DataGridTextColumn Header="Имя" 
                                  Binding="{Binding FName}" 
                                  Width="180"
                                  ElementStyle="{StaticResource DataGridTextStyle}" HeaderStyle="{StaticResource DataGridColumnHeaderDish}"/>

                    <DataGridTextColumn Header="Отчество" 
                                  Binding="{Binding Patronymic}" 
                                  Width="180"
                                  ElementStyle="{StaticResource DataGridCenterTextStyle}" HeaderStyle="{StaticResource DataGridColumnHeaderDish}"/>

                    <DataGridTextColumn Header="Логин" 
                                  Binding="{Binding Login}" 
                                  Width="180"
                                  ElementStyle="{StaticResource DataGridRightTextStyle}" HeaderStyle="{StaticResource DataGridColumnHeaderDish}"/>

                    <DataGridTextColumn Header="Пароль" 
                                  Binding="{Binding Password}" 
                                  Width="150"
                                  ElementStyle="{StaticResource DataGridTextStyle}" HeaderStyle="{StaticResource DataGridColumnHeaderDish}"/>

                    <DataGridTextColumn Header="Роль" 
                                Binding="{Binding Role.Role1}" 
                                Width="130"
                                ElementStyle="{StaticResource DataGridTextStyle}" HeaderStyle="{StaticResource DataGridColumnHeaderDish}"/>


                    <DataGridTemplateColumn Header="Действия" Width="1.5*" HeaderStyle="{StaticResource DataGridColumnHeaderDish}">
                        <DataGridTemplateColumn.CellTemplate >
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Content="✏️" 
                                        ToolTip="Редактировать"
                                        Style="{StaticResource IconButton}"
                                        Click="BtEdit_Click"/>

                                    <Button Content="🗑️" 
                                        ToolTip="Удалить"
                                        Style="{StaticResource IconButton}"
                                        Click="BtnDelete_Click"
                                        Margin="10,0,0,0"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Панель действий -->
        <Border Grid.Row="2"  Padding="15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Добавить пользователя" 
                    x:Name="BtnAdd" 
                    Click="BtnAdd_Click"
                    Style="{StaticResource Button}" Width="250" Height="38" 
                    Padding="20 10" Cursor="" VerticalAlignment="Bottom"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
