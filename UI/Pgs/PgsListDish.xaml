<Page x:Class="LaGustosa.UI.Pgs.PgsListDish"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LaGustosa.UI.Pgs"
      mc:Ignorable="d" 
      Height="800" Width="1150"
      Title="Список блюд" 
      IsVisibleChanged="Page_IsVisibleChanged">

    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Canvas>
                <Line X2="1150" Canvas.Top="28" Style="{StaticResource Line}" />
            </Canvas>
        </Grid>


        <!-- Заголовок с поиском -->
        <Border Grid.Row="0"  Padding="15" Margin="0,30,0,630" Grid.RowSpan="2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="300"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Список блюд" FontSize="28" Style="{StaticResource Foreground}" FontWeight="Bold" VerticalAlignment="Center"/>

                <TextBox Grid.Column="1" x:Name="SearchBox"  TextChanged="SearchBox_TextChanged" Style="{StaticResource ModernTextBox}" Margin="0,0,0,0" VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Список блюд -->
        <Border Grid.Row="1" Margin="15,25,15,15" CornerRadius="5">
            <DataGrid x:Name="DataGridDish"  Style="{StaticResource ModernDataGridStyle}"
             LoadingRow="DataGridDish_LoadingRow"
              AutoGenerateColumns="False">

                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="Изображение" Width="90"
                                   HeaderStyle="{StaticResource DataGridColumnHeaderDish}">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Image Source="{Binding Image}"  Width="60"  Height="60" Stretch="UniformToFill">
                                    <Image.Clip>
                                        <RectangleGeometry Rect="0,0,60,60" RadiusX="5" RadiusY="5"/>
                                    </Image.Clip>
                                </Image>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTextColumn Header="Название" 
                                      Binding="{Binding Name}" 
                                      Width="2*"
                                      ElementStyle="{StaticResource DataGridTextStyle}" HeaderStyle="{StaticResource DataGridColumnHeaderDish}"/>

                    <DataGridTextColumn Header="Описание" 
                                      Binding="{Binding Description}" 
                                      Width="3*"
                                      ElementStyle="{StaticResource DataGridTextStyle}" HeaderStyle="{StaticResource DataGridColumnHeaderDish}"/>

                    <DataGridTextColumn Header="Вес" 
                                      Binding="{Binding Weight, StringFormat={}{0} г}" 
                                      Width="1*"
                                      ElementStyle="{StaticResource DataGridCenterTextStyle}" HeaderStyle="{StaticResource DataGridColumnHeaderDish}"/>

                    <DataGridTextColumn Header="Цена" 
                                      Binding="{Binding Price, StringFormat={}{0:# руб.}}" 
                                      Width="1.5*"
                                      ElementStyle="{StaticResource DataGridRightTextStyle}" HeaderStyle="{StaticResource DataGridColumnHeaderDish}"/>

                    <DataGridTextColumn Header="Категория" 
                                      Binding="{Binding DishCategory.Category}" 
                                      Width="1.5*"
                                      ElementStyle="{StaticResource DataGridTextStyle}" HeaderStyle="{StaticResource DataGridColumnHeaderDish}"/>

                    <DataGridTemplateColumn Header="Видимость" Width="1.5*" HeaderStyle="{StaticResource DataGridColumnHeaderDish}">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock>
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock" BasedOn="{StaticResource DataGridTextStyle}">
                                            <Setter Property="Text" Value="Скрыт"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Visibility}" Value="True">
                                                    <Setter Property="Text" Value="Видим"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>


                    <DataGridTemplateColumn Header="Действия" Width="1.5*" HeaderStyle="{StaticResource DataGridColumnHeaderDish}">
                        <DataGridTemplateColumn.CellTemplate >
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Content="✏️" 
                                            ToolTip="Редактировать"
                                            Style="{StaticResource IconButton}"
                                            Click="BtEdit_Click"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Панель действий -->
        <Border Grid.Row="2"  Padding="15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Добавить блюдо" 
                        x:Name="BtnAdd" 
                        Click="BtnAdd_Click"
                        Style="{StaticResource Button}" Width="180" Height="40" 
                        Padding="20 10" Cursor=""/>
            </StackPanel>
        </Border>
    </Grid>
</Page>